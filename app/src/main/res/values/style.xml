<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    Edit text style -->
    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

<!--    Input card view style-->
    <style name="input_card_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="strokeColor">@color/light_grey</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardElevation">0dp</item>
    </style>

<!--    Button style-->
    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:background">@drawable/btn_bg</item>
    </style>

</resources>